{
  "testEnvironment": "node",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "moduleFileExtensions": [
    "ts",
    "js",
    "json",
    "node"
  ],
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|js)$",
  "testPathIgnorePatterns": ["/__tests__/include\\.*"],
  "coverageDirectory": "coverage",
  "coveragePathIgnorePatterns": ["/__tests__/include\\.*"],
  "collectCoverageFrom": [
    "src/**/*.ts"
  ]
}