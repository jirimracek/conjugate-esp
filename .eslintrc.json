{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
        // "plugin:prettier/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true
        }
    },
    "plugins": [
        "@typescript-eslint"
        // "prettier"
    ],
    "rules": {
        // "prettier/prettier": 2,
        "array-element-newline": [
            "warn",
            "consistent"
            // {"multiline": true, "minItems": 3}
        ],
        // "array-bracket-newline": [
        //     "warn",
        //     "consistent"
        // {"multiline": true, "minItems": 3}
        // ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "off",
            "never"
        ],
        "max-len": [
            "warn",
            {
                "code": 120,
                "ignorePattern": "^\\s*(public|protected|private|import|export).*",
                "ignoreComments": true
            }
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
                // "ignoreComments": true
            }
        ],
        // "implicit-arrow-linebreak": [
        //     "error",
        //     "beside"
        // ],
        // "newline-per-chained-call": "warn",
        // "object-curly-newline": [
        //     "warn",
        //     {
        //         "consistent": true
        //     }
        // ],
        // "arrow-body-style": [
        // "error",
        // "never"
        // ],
        "no-extra-semi": "warn",
        "@typescript-eslint/member-delimiter-style": [
            "warn",
            {
                "singleline": {
                    "delimiter": "comma",
                    "requireLast": false
                }
            }
        ]
        // "@typescript-eslint/member-delimiter-style": ["error", 
        //     {"singleline": {"delimiter": "coma", "requireLast": false }, "overrides": {"type": {"singleline": {"delimiter": "coma"}}}}]
        // "@typescript-eslint/member-delimiter-style": {"singleline": {"delimiter": "semi" | "comma" }}
        // "no-use-before-define":"off",
        // "@typescript-eslint/no-use-before-define": "off"
    }
}