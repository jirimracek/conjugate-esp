{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true
        }
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "array-element-newline": [
            "warn",
            "consistent"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-fallthrough": "error",
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "off",
            "never"
        ],
        "max-len": [
            "warn",
            {
                "code": 120,
                "ignorePattern": "^\\s*(public|protected|private|import|export).*",
                "ignoreComments": true
            }
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-extra-semi": "warn",
        "@typescript-eslint/member-delimiter-style": [
            "warn",
            {
                "singleline": {
                    "delimiter": "comma",
                    "requireLast": false
                }
            }
        ]
        // "no-use-before-define":"off",
        // "@typescript-eslint/no-use-before-define": "off"
        /* eslint-enable max-len */
        /* eslint-disable-next-line max-len */
        /* eslint-disable @typescript-eslint/class-name-casing */
        /* eslint-disable array-element-newline */
    }
}