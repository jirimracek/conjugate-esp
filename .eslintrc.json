{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true
        }
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1,
                "ignoreComments": true
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "off",
            "never"
        ],
        "@typescript-eslint/member-delimiter-style": [
            "warn",
            {
                "singleline": {
                    "delimiter": "comma",
                    "requireLast": false
                }
            }
        ]
        // "@typescript-eslint/member-delimiter-style": ["error", 
        //     {"singleline": {"delimiter": "coma", "requireLast": false }, "overrides": {"type": {"singleline": {"delimiter": "coma"}}}}]
        // "@typescript-eslint/member-delimiter-style": {"singleline": {"delimiter": "semi" | "comma" }}
        // "no-use-before-define":"off",
        // "@typescript-eslint/no-use-before-define": "off"
    }
}